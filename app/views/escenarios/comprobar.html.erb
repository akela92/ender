<% provide(:title, 'Comprobar resultado') %>
<h1>Comprobar resultado</h1>
<%= form_for(@escenario, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
<span class="picture">
<%= f.file_field_tag 'picture' %>
    <%= f.file_field :fichero, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
  <%= f.submit "Publicar", class: "btn btn-primary" %>
  
<% end %>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
