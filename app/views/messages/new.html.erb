<% provide(:title, 'Contacto') %>
<h1>Contacto</h1>
<%= form_for @message, url: contact_path do |message_form| %>
<%= render 'shared/error_messages', object: message_form.object %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <div class="field">
   <%= message_form.label :nombre %><br>
    <%= message_form.text_field :name, class: 'form-control' %>
  </div>
  <div class="field">
   <%= message_form.label :email %><br>
    <%= message_form.text_field :email, class: 'form-control' %>
  </div>
  <div class="field">
    <%= message_form.label :contenido %><br>
    <%= message_form.text_area :content, class: 'form-control' %>
  </div>
   <div class="actions">
    <%= message_form.submit "Enviar", class: "btn btn-primary" %>
  </div>
  </div>
  </div>
 

<% end %>

